            li.option(data-image='aida_ash_inside', data-category="inside")
              .option-pic(style="background-image: url('../../img/vip-example-33.jpg')")
              .option-about
                p.option-about__title Ash
                p.option-about__description natural leather
            li.option(data-image='aida_sand_inside', data-category="inside")
              .option-pic(style="background-image: url('../../img/vip-example-34.jpg')")
              .option-about
                p.option-about__title Grey
                p.option-about__description natural leather
        .vip-options__column.md-visible
          p.vip-options__column-title Hardware
          ul.vip-options__list
            li.option.active
              .option-pic(style="background-image: url('../../img/vip-example-4.jpg')")
              .option-about
                p.option-about__title Floristry
                p.option-about__description customization
  .vip-footer
    .container
      p 
        span.gold Emphasize your status 
        | and set up your work rhythm
      button.button#popup-open
        | Shop now